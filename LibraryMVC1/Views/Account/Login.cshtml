@model LibraryMVC1.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Вход";
}

<h2>Вход</h2>

<form asp-action="Login" method="post">
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" type="email" required />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" type="password" required />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input asp-for="RememberMe" /> <label asp-for="RememberMe"></label>
    </div>

    <button type="submit" class="btn btn-primary">Вход</button>
</form>

<p>Нямате акаунт? <a asp-action="Register">Регистрация</a></p>


