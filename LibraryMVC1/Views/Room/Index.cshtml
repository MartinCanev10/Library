@model IEnumerable<LibraryMVC1.Models.Room>

@{
    ViewData["Title"] = "Стаи";
}

<h2>Списък със стаи</h2>

<a asp-action="Create" class="btn btn-success">Добави нова стая</a>

<table class="table">
    <thead>
        <tr>
            <th>Номер на стая</th>
            <th>Капацитет</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var room in Model)
        {
            <tr>
                <td>@room.RoomNumber</td>
                <td>@room.Capacity</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@room.Id" class="btn btn-warning">Редакция</a>
                    <a asp-action="Delete" asp-route-id="@room.Id" class="btn btn-danger">Изтриване</a>
                </td>
            </tr>
        }
    </tbody>
</table>
